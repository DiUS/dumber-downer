.span1.profile_image_container
  = link_to image_tag(tweet.user.profile_image_url, class: "img-rounded"), user_path(tweet.user.screen_name)
.span11
  %p.name_container
    %span.name
      = link_to tweet.user.name, user_path(tweet.user.screen_name)
    %span.screen_name
      = link_to "@#{tweet.user.screen_name}", user_path(tweet.user.screen_name)
    %span.time.pull-right
      = link_to "#{time_ago_in_words(tweet.created_at)}", "http://twitter.com/#{tweet.user.screen_name}/status/#{tweet.id}"
  %p.text
    = tweet.text.html_safe
  - if tweet_external
    %p.retweet_attribution
      Retweeted by
      = link_to tweet_external.user.name, user_path(tweet_external.user.screen_name)


